@model eShopSolution.ViewModels.System.Users.UserVm

@{
    ViewData["Title"] = "Chi tiết Người Dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Tables</h1>
